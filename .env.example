# Google スプレッドシート設定
SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Flask設定
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# ==========================================
# ログ設定（Cloud Run課金最適化）
# ==========================================

# ログレベル: DEBUG, INFO, WARNING, ERROR, CRITICAL
# 本番環境（Cloud Run）では WARNING 推奨（ログコスト削減）
# ローカル開発環境では INFO または DEBUG を推奨
LOG_LEVEL=WARNING

# 詳細ログフラグ（本番環境では全てfalse推奨）
# ===== デバッグログ =====
# 詳細な処理ログ（開発時のみ有効化）
ENABLE_DEBUG_LOGS=false

# ===== 情報ログ =====
# アプリケーション起動・停止、スケジューラーの動作ログ
ENABLE_INFO_LOGS=false

# ===== 機能別ログ =====
# ML予測結果のログ（予測値、信頼度など）
LOG_PREDICTIONS=false

# データ取得・保存操作のログ
LOG_DATA_OPERATIONS=false

# モデル訓練のログ（精度指標など）
LOG_MODEL_TRAINING=false

# ==========================================
# ローカル開発環境用の設定例（コメント解除して使用）
# ==========================================
# LOG_LEVEL=INFO
# ENABLE_DEBUG_LOGS=true
# ENABLE_INFO_LOGS=true
# LOG_PREDICTIONS=true
# LOG_DATA_OPERATIONS=true
# LOG_MODEL_TRAINING=true

# Cloud Run設定
PORT=8080